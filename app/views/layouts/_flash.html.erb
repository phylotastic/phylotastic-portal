<% if notice %>
  <p class="alert alert-success center"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger center"><%= alert %></p>
<% end %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> center">
    <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul class="list-unstyled">
        <li>
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>

<script type="text/javascript">
  $(".alert" ).fadeOut(7000);
</script>