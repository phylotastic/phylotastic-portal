<div class="panel-content-wrapper">

  <p class="select-species-note"><em>* Edit name as desired, then click the 'Resolve' button to look for matches</em></p>
  
  <div class="alert hide" id="unmatched-alert" role="alert">
    <div id="unmatched-alert-content"></div>
  </div>
  
  <div>
    <% names.each do |s| %>
      <div class="row resolve-row">
        <%= form_tag resolve_names_list_path(list), method: :post, remote: true, class: "form-horizontal" do %>
          <div class="col-md-4">
            <%= s %>
          </div>
          <div class="col-md-5">
            <%= text_field_tag "replace", s, class: "form-control" %>
          </div>
          <%= hidden_field_tag "unresolve", s %>
          <div class="col-md-3 center">
            <%= submit_tag "Resolve", class: "btn btn-primary resolve-btn"%>
            <i class="fa fa-spin fa-spinner hide" aria-hidden="true"></i>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
</div>

<script type="text/javascript">
  $('.resolve-btn').click(function() {
    $(this).submit();
    $(this).addClass('hide');
    $(this).siblings('.fa').removeClass('hide');
  })
</script>